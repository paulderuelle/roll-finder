<nav>
  <div class="navbar-container">
    <div class="navbar-buttons">
      <div class="navbar-button">
        <%= link_to "RollFinder", root_path, id:"brand" %>
      </div>
      <% if user_signed_in? %>
        <div class="navbar-button navbar-comments">
          <%= link_to chatrooms_path do %>
            <i class="fa-solid fa-comments fa-xl"></i>
          <% end %>
        </div>
        <div class="navbar-button">
          <% if current_user.photo.attached? %>
            <%= link_to user_path(current_user) do %>
              <%= image_tag current_user.photo, class:"avatar-global" %>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user) do %>
              <%= image_tag "meeple.png", class:"avatar-global" %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="navbar-button">
          <%= link_to "Login", new_user_session_path, id:"login" %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
