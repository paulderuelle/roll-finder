<h1><%= @event.title %></h1>
<%= @event.description %>
<br><%= @event.start_hours.year %>
<br><%= @event.start_hours.hour %>:<%= @event.start_hours.min %>  :  <%= @event.end_hours.hour %>:<%= @event.end_hours.min %>
<br><%= @event.address %>
<br><%= @event.slot_number %>
      <div class="cta">
        <% if current_user == @event.user %>
          <%= link_to "", edit_event_path(@event), class: "fa-solid fa-pencil fa-lg" %>
          <%= link_to "", event_path(@event), class: "fa-solid fa-trash-can fa-lg", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% else %>
        <% end %>
      </div>


<%= link_to "new booking", new_event_booking_path(@event)%>
<%= link_to "new bookmark", new_event_bookmark_path(@event)%>
