<%= simple_form_for(@user, url: user_path(@user), method: :patch, data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname, required: true %>
    <%= f.input :first_name, required: true %>
    <%= f.input :password %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file, label: "Photo" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Profile" %>
  </div>
<% end %>
